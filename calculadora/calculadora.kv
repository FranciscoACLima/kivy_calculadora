#:set TITL 'Kivy Calculadora'
<Tela@BoxLayout>:
    orientation: 'vertical'
    spacing: 15
    padding: 10
    Label:
        text: TITL
        size_hint: 1, 0.1
        font_size: '15sp'
        id: tit
    Resultado:
        id: res
        canvas.before:
            Color:
                rgba: 255, 153, 255, 1
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
    	orientation: 'horizontal'
	    spacing: 15
	    GridLayout:
	        size_hint: 0.75, 0.97
	        spacing: 15
	        cols:3
	        Btn:
	            text:'1'
	            on_press: root.carregar('1')
	        Btn:
	            text:'2'
	            on_press: root.carregar('2')

	        Btn:
	            text:'3'
	            on_press: root.carregar('3')

	        Btn:
	            text:'4'
	            on_press: root.carregar('4')

	        Btn:
	            text:'5'
	            on_press: root.carregar('5')

	        Btn:
	            text:'6'
	            on_press: root.carregar('6')

	        Btn:
	            text:'7'
	            on_press: root.carregar('7')

	        Btn:
	            text:'8'
	            on_press: root.carregar('8')

	        Btn:
	            text:'9'
	            on_press: root.carregar('9')

	        Btn:
	            text:'.'
	            on_press: root.carregar('.')

	        Btn:
	            text:'0'
	            on_press: root.carregar('0')
	        Btn:
	            text:'='
	            on_press: root.calcular()

	    BoxLayout:
	        orientation: 'vertical'
	        size_hint: 0.2, 0.97
	        spacing: 15

	        Btn:
	            text:'C'
	            on_press: root.limpar()
	        Btn:
	            text:'/'
	            on_press: root.carregar('/')
	        Btn:
	            text:'*'
	            on_press: root.carregar('*')
	        Btn:
	            text:'-'
	            on_press: root.carregar('-')
	        Btn:
	            text:'+'
	            on_press: root.carregar('+')

<Btn@Button>:
    text_size_hint: 0.7,0.7
    font_size: '45sp'

<Resultado@Label>:
    text: ''
    size_hint: 1, 0.15
    font_size: '35sp'
    color: (0, 0, 1, 1)

Tela:
